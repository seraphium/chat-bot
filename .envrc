# direnv configuration for chat-bot project
# This file will automatically load environment variables when you cd into this directory

# Load .env file if it exists
if [ -f .env ]; then
  dotenv .env
fi

# Load .env.local file if it exists (for local overrides)
if [ -f .env.local ]; then
  dotenv .env.local
fi

# Project-specific environment variables
export PROJECT_ROOT=$(pwd)
export PYTHONPATH="${PROJECT_ROOT}/langchain_backend:${PYTHONPATH}"

# Development shortcuts
export POETRY_VENV_IN_PROJECT=1

# Colors for terminal output
export FORCE_COLOR=1

echo "üîß Environment loaded for chat-bot project"
echo "üìÇ Project root: ${PROJECT_ROOT}"
echo "üêç Python path includes: langchain_backend/"
